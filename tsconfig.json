{
  "compilerOptions": {
    "target": "esnext",
		"moduleDetection": "force",
    "module": "Preserve",
    "moduleResolution": "node",
    "inlineSources": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
		"isolatedModules": true,
		"allowJs": true,
    "noUnusedLocals": true,
		"strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
		"typeRoots": [
			"./node_modules/@types",
			"./src/@types"
		],
  },
  "include": [
    "src"
	]
}